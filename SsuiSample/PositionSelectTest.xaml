<flat:ThemedUserControl x:Class="SsuiSample.PositionSelectTest" x:Name="control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SsuiSample"
             xmlns:flat="clr-namespace:SolidShineUi;assembly=SolidShineUi"
             xmlns:utils="clr-namespace:SolidShineUi.Utils;assembly=SolidShineUi"
             xmlns:system="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <flat:PositionSelect Width="250" Height="250" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"
            SelectedX="0.5" SelectedY="0.5" SelectorSize="15" x:Name="selPos1" SelectedPositionChanged="selPos1_SelectedPositionChanged" >
            <flat:PositionSelect.HorizontalSnapPoints>
                <system:Double>0.25</system:Double>
                <system:Double>0.5</system:Double>
                <system:Double>0.75</system:Double>
            </flat:PositionSelect.HorizontalSnapPoints>
            <flat:PositionSelect.VerticalSnapPoints>
                <system:Double>0.25</system:Double>
                <system:Double>0.5</system:Double>
                <system:Double>0.75</system:Double>
            </flat:PositionSelect.VerticalSnapPoints>
        </flat:PositionSelect>
        <TextBlock Grid.Row="1" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Width:" />
        <flat:DoubleSpinner Grid.Row="1" Margin="60,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Decimals="3" Width="80"
                            MinValue="0" MaxValue="1" Step="0.05" x:Name="nudWidth1" Value="{Binding ElementName=selPos1, Path=SelectedX}" />
        <TextBlock Grid.Row="2" Margin="10,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Height:" />
        <flat:DoubleSpinner Grid.Row="2" Margin="60,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Decimals="3" Width="80" 
                            MinValue="0" MaxValue="1" Step="0.05" x:Name="nudHeight1" Value="{Binding ElementName=selPos1, Path=SelectedY}" />
        <flat:CheckBox Grid.Row="1" Margin="160,0,0,0" Content="Snap to Snaplines" x:Name="chkSnap"
                            HorizontalAlignment="Left" IsChecked="{Binding ElementName=selPos1, Path=SnapToSnaplines, Mode=TwoWay}" />
        <flat:CheckBox Grid.Row="1" Margin="290,0,0,0" Content="Is Enabled" x:Name="chkEnabled"
                            HorizontalAlignment="Left" IsChecked="{Binding ElementName=selPos1, Path=IsEnabled, Mode=TwoWay}" />
        <TextBlock Grid.Row="1" Margin="385,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Snapline Opacity:" />
        <flat:DoubleSpinner Grid.Row="1" Margin="485,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="70" Decimals="3" 
            MinValue="0" MaxValue="1" Step="0.1" x:Name="nudSnaplineOpacity" Value="{Binding SnaplineOpacity, ElementName=selPos1}" />
        <TextBlock Grid.Row="2" Margin="160,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Snap distance:" />
        <flat:DoubleSpinner Grid.Row="2" Margin="240,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="70" Decimals="3" 
                            MinValue="0" MaxValue="20" Step="1" x:Name="nudSnapsize" Value="{Binding ElementName=selPos1, Path=SnapDistance}" />
        <TextBlock Grid.Row="2" Margin="325,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Text="Selector size:" />
        <flat:DoubleSpinner Grid.Row="2" Margin="400,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Left" Width="70" Decimals="3" 
            MinValue="0" MaxValue="20" Step="1" x:Name="nudSelectorSize" Value="{Binding SelectorSize, ElementName=selPos1}" />
    </Grid>
</flat:ThemedUserControl>
