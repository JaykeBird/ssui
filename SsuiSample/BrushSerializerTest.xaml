<flat:ThemedUserControl x:Class="SsuiSample.BrushSerializerTest" x:Name="control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SsuiSample"
             xmlns:flat="clr-namespace:SolidShineUi;assembly=SolidShineUi"
             xmlns:editors="clr-namespace:SolidShineUi.PropertyList.PropertyEditors;assembly=SolidShineUi"
             mc:Ignorable="d" d:DesignHeight="450" d:DesignWidth="500">
    <ScrollViewer VerticalScrollBarVisibility="Auto" >
        <Grid>
            <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0" Text="Brush Serializer Test" FontSize="16" VerticalAlignment="Top"/>
            <TextBlock HorizontalAlignment="Left" Margin="20,65,0,0" Text="Serialize (convert brush to string):" VerticalAlignment="Top"/>

            <editors:BrushEditor x:Name="brushEditor" Margin="20,110,40,0" Height="24" VerticalAlignment="Top" />
            <TextBlock HorizontalAlignment="Left" Margin="20,85,0,0" Text="Only solid color brushes and gradient brushes are supported" VerticalAlignment="Top"/>
            <flat:ClickSelectTextBox x:Name="txtOutputBox" Margin="20,150,95,0" VerticalAlignment="Top" Height="24" VerticalContentAlignment="Center"
                BorderBrush="#01000000" Background="#01000000" IsReadOnly="True" IsReadOnlyCaretVisible="True" Padding="0" />
            <flat:FlatButton Content="Copy" x:Name="btnCopy1" HorizontalAlignment="Right" Margin="0,150,24,0" VerticalAlignment="Top" Width="60" Click="btnCopy1_Click" />
            <TextBlock HorizontalAlignment="Left" Margin="20,195,0,0" Text="Deserialize (convert string to brush):" VerticalAlignment="Top"/>
            <flat:ClickSelectTextBox x:Name="txtInputBox" Margin="20,225,95,0" VerticalAlignment="Top" Height="24" VerticalContentAlignment="Center" TextChanged="txtInputBox_TextChanged" />
            <flat:FlatButton Content="Paste" x:Name="btnPaste" HorizontalAlignment="Right" Margin="0,225,24,0" VerticalAlignment="Top" Width="60" Click="btnPaste_Click" />
            <Border BorderThickness="1" Height="60" Margin="20,261,24,0" VerticalAlignment="Top" Background="{x:Null}" x:Name="brdr"
                BorderBrush="{Binding ElementName=control, Path=SsuiTheme.BorderBrush, FallbackValue=Black}" />
            <flat:ClickSelectTextBox x:Name="txtBrushOutput" Margin="20,326,24,14" AcceptsReturn="True" AcceptsTab="True" MinHeight="110"
                                     VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" FontFamily="Consolas" />
        </Grid>
    </ScrollViewer>
</flat:ThemedUserControl>
