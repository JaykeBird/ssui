<flat:ThemedUserControl x:Class="SsuiSample.TwoBasicSelectPanels" x:Name="control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SsuiSample"
             xmlns:flat="clr-namespace:SolidShineUi;assembly=SolidShineUi"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <flat:ThemedUserControl.Resources>
        <ResourceDictionary>
            <local:SelectableListItemCollection x:Key="selList">
                <flat:SelectableItem Text="Potato" />
                <flat:SelectableItem Text="Whaaaaat" />
                <flat:SelectableItem Text="Wheat" />
            </local:SelectableListItemCollection>
        </ResourceDictionary>
    </flat:ThemedUserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <flat:SelectPanel Grid.Column="1" Grid.Row="2" x:Name="basic1" />
        <flat:SelectPanel Grid.Column="3" Grid.Row="2" x:Name="basic2" ItemsSource="{Binding Source={StaticResource selList}}" />

        <TextBlock Grid.Column="1" Grid.Row="0" Text="2 Select Panels Test" FontSize="14" VerticalAlignment="Center" />

        <StackPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Center" >
            <flat:FlatButton Content="Add Item to Left" x:Name="btnAdd" Click="btnAdd_Click" />
            <flat:FlatButton Content="Add Item to Right" x:Name="btnAddRight" Click="btnAddRight_Click" />
            <flat:FlatButton Content="Clear All Items" x:Name="btnClear" Click="btnClear_Click" />
        </StackPanel>
    </Grid>
</flat:ThemedUserControl>
