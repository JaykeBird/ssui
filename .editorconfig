[*.cs]

# RXRA001: Property can be expanded
dotnet_diagnostic.RXRA001.severity = none

# RXRA004: Property can be expanded
dotnet_diagnostic.RXRA004.severity = silent

# CA1401: P/Invokes should not be visible
dotnet_diagnostic.CA1401.severity = none

# IDE0090: Use 'new(...)'
csharp_style_implicit_object_creation_when_type_is_apparent = false:suggestion

# CA2211: Non-constant fields should not be visible
dotnet_diagnostic.CA2211.severity = none

# IDE0017: Simplify object initialization
dotnet_diagnostic.IDE0017.severity = silent
csharp_indent_labels = no_change

# IDE0063: Use simple 'using' statement
csharp_prefer_simple_using_statement = false:suggestion

# CA1847: Use char literal for a single character lookup
dotnet_diagnostic.CA1847.severity = none

# IDE1006: Naming Styles
dotnet_diagnostic.IDE1006.severity = none

# IDE0045: Convert to conditional expression
dotnet_diagnostic.IDE0045.severity = silent

# IDE0046: Convert to conditional expression
dotnet_diagnostic.IDE0046.severity = silent

# IDE0056: Use index operator
csharp_style_prefer_index_operator = false:suggestion

# IDE0066: Convert switch statement to expression
csharp_style_prefer_switch_expression = false:suggestion

# IDE0079: Remove unnecessary suppression
dotnet_diagnostic.IDE0079.severity = silent

# IDE0083: Use pattern matching
dotnet_diagnostic.IDE0083.severity = none
dotnet_diagnostic.CA1865.severity = none
dotnet_diagnostic.CA1866.severity = none

# SYSLIB1054: Use 'LibraryImportAttribute' instead of 'DllImportAttribute' to generate P/Invoke marshalling code at compile time
dotnet_diagnostic.SYSLIB1054.severity = none

# IDE1006: using naming convention
dotnet_diagnostic.IDE1006.severity = none