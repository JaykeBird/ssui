                        </Grid.RowDefinitions>

                        <Grid Margin="0,0,0,0" x:Name="grdTabs" Grid.Column="1" MinHeight="24" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition x:Name="colLeftElement" Width="Auto" />
                                <ColumnDefinition x:Name="colScrollLeft">
                                    <ColumnDefinition.Style>
                                        <Style TargetType="ColumnDefinition">
                                            <Setter Property="Width" Value="0" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TabScrollButtonsVisible, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}" Value="True">
                                                    <Setter Property="Width" Value="20" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ColumnDefinition.Style>
                                </ColumnDefinition>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition x:Name="colScrollRight" >
                                    <ColumnDefinition.Style>
                                        <Style TargetType="ColumnDefinition">
                                            <Setter Property="Width" Value="0" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding TabScrollButtonsVisible, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}" Value="True">
                                                    <Setter Property="Width" Value="20" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ColumnDefinition.Style>
                                </ColumnDefinition>
                                <ColumnDefinition x:Name="colRightElement" Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border BorderThickness="0" Background="Transparent" x:Name="PART_LeftHolder_Horizontal" Grid.Column="0" >
                                <Border flat:BindableChild.BindableChild="{Binding Tag, RelativeSource={RelativeSource Self}, Converter={StaticResource BindableChildConverter}}"
                                    Tag="{Binding FileMenu, RelativeSource={RelativeSource TemplatedParent}}" x:Name="brdrFileMenu" />
                            </Border>
                            <Border x:Name="brdrScrollLeft" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="{TemplateBinding BorderBrush}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderThickness" Value="0,1,0,0"  />
                                        <Setter Property="VerticalAlignment" Value="Bottom" />
                                        <!--<Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowTabsOnBottom, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}" Value="True">
                                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                <Setter Property="VerticalAlignment" Value="Top" />
                                            </DataTrigger>
                                        </Style.Triggers>-->
                                    </Style>
                                </Border.Style>
                            </Border>
                            <flat:FlatButton x:Name="btnScrollLeft" Grid.Column="1" Padding="1"
                                             Command="{x:Static flat:TabControl.TabBarScrollCommand}" CommandParameter="{x:Static ssut:TabScrollCommandAction.Left}"
                                             IsEnabled="{Binding TabScrollButtonsVisible, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}"
                                             ColorScheme="{Binding ColorScheme, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}">
                                <Path Data="M8,0 L0,4 8,8 z" Fill="{Binding ColorScheme.ForegroundColor, RelativeSource={RelativeSource FindAncestor, 
                                        AncestorType={x:Type ribbon:Ribbon}}, Converter={StaticResource ColorConverter}}" />
                            </flat:FlatButton>
                            <ScrollViewer x:Name="PART_TabScroll" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" Grid.Column="2" >
                                <Grid Margin="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>
                                    <ItemsControl x:Name="PART_TabBar" ItemsSource="{TemplateBinding Items}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <ributils:RibbonTabDisplayItem x:Name="PART_TabItem"
                                                                     Visibility="{Binding Visibility}" TabItem="{Binding .}" 
                                                                     AllowDataDragDrop="{Binding AllowDrop, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}"
                                                                     ColorScheme="{Binding ColorScheme, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}"
                                                                     ParentRibbon="{Binding ., RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}" />
                                                <!-- AllowDragDrop="{Binding AllowControlReordering, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}" -->
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <!-- border to right of tabs -->
                                    <Border Grid.Column="1" BorderBrush="{TemplateBinding BorderBrush}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderThickness" Value="0,1,0,0"  />
                                                <Setter Property="VerticalAlignment" Value="Bottom" />
                                                <!--<Style.Triggers>
                                                    <DataTrigger Binding="{Binding ShowTabsOnBottom, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}" Value="True">
                                                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                        <Setter Property="VerticalAlignment" Value="Top" />
                                                    </DataTrigger>
                                                </Style.Triggers>-->
                                            </Style>
                                        </Border.Style>
                                    </Border>
                                </Grid>
                            </ScrollViewer>
                            <Border x:Name="brdrScrollRight" Grid.Column="3" Grid.ColumnSpan="3" BorderBrush="{TemplateBinding BorderBrush}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderThickness" Value="0,1,0,0"  />
                                        <Setter Property="VerticalAlignment" Value="Bottom" />
                                        <!--<Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowTabsOnBottom, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}" Value="True">
                                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                <Setter Property="VerticalAlignment" Value="Top" />
                                            </DataTrigger>
                                        </Style.Triggers>-->
                                    </Style>
                                </Border.Style>
                            </Border>
                            <flat:FlatButton x:Name="btnScrollRight" Grid.Column="3" Padding="1" TransparentBack="True"
                                             Command="{x:Static flat:TabControl.TabBarScrollCommand}" CommandParameter="{x:Static ssut:TabScrollCommandAction.Right}"
                                             IsEnabled="{Binding TabScrollButtonsVisible, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}"
                                             ColorScheme="{Binding ColorScheme, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}" >
                                <Path Data="M0,0 L8,4 0,8 z" Fill="{Binding ColorScheme.ForegroundColor, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}, 
                                    Converter={StaticResource ColorConverter}}" />
                            </flat:FlatButton>
                            <Border BorderThickness="0" Background="Transparent" x:Name="PART_RightHolder_Horizontal" Grid.Column="4" >
                                <Border flat:BindableChild.BindableChild="{Binding Tag, RelativeSource={RelativeSource Self}, Converter={StaticResource BindableChildConverter}}"
                                    Tag="{Binding TopRightElement, RelativeSource={RelativeSource TemplatedParent}}" x:Name="brdrRightElementParent" />
                            </Border>
                        </Grid>

                        <Grid Grid.Row="1" >
                            <Border x:Name="PART_Content" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding MainBarBackground}" >
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderThickness" Value="1,0,1,1"  />
                                        <!--<Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowTabsOnBottom, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}" Value="True">
                                                <Setter Property="BorderThickness" Value="1,1,1,0" />
                                            </DataTrigger>
                                        </Style.Triggers>-->
                                    </Style>
                                </Border.Style>
                                <ScrollViewer x:Name="PART_MainScroll" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled" Grid.Column="2" >
                                    <ItemsControl Margin="1,0" Focusable="False" Height="{TemplateBinding MainBarHeight}" x:Name="PART_MainContent"
                                                  ItemsSource="{Binding SelectedTab.Items, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ribbon:Ribbon}}}" >
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel IsItemsHost="True" Orientation="Horizontal" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </ScrollViewer>

                                <!--<ContentPresenter x:Name="PART_ContentHost" ContentSource="{Binding Path=SelectedTabContent, RelativeSource={RelativeSource AncestorType={x:Type ribbon:Ribbon}}}" />-->
                            </Border>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ribbon:RibbonGroup}" >
        <Setter Property="Focusable" Value="False" />
        <Setter Property="AllowDrop" Value="False" />
        <Setter Property="MaxHeight" Value="96" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ribbon:RibbonGroup}">
                    <Grid Margin="{TemplateBinding Padding}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition x:Name="rowGroupHeader">
                                <RowDefinition.Style>
                                    <Style TargetType="{x:Type RowDefinition}">
                                        <Setter Property="Height" Value="Auto" />
                                        <Setter Property="MinHeight" Value="20" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=ShowGroupHeader, RelativeSource={RelativeSource AncestorType={x:Type ribbon:RibbonGroup}}}" Value="False">
                                                <Setter Property="MinHeight" Value="0" />
                                                <Setter Property="Height" Value="0" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </RowDefinition.Style>
                            </RowDefinition>
                        </Grid.RowDefinitions>

                        <flat:FlatButton TransparentBack="True" Grid.Column="2" ColorScheme="{TemplateBinding ColorScheme}" Padding="1" Margin="3,0,0,0" 
                                        MinHeight="16" x:Name="btn_InlineLauncher" IsEnabled="{TemplateBinding IsLauncherEnabled}" ToolTip="{TemplateBinding LauncherTooltip}"
                                        Command="{x:Static ribbon:RibbonCommands.DialogLauncherAction}" >
                            <flat:FlatButton.Style>
                                <Style TargetType="{x:Type flat:FlatButton}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </flat:FlatButton.Style>
                            <Path Grid.Column="1" Data="M8,0 L8,8 0,8 L1,7 L7,7 L7,1 z" HorizontalAlignment="Left" VerticalAlignment="Center"
                                        Height="8" Width="8" Stretch="Fill" Fill="{TemplateBinding Foreground}" Stroke="{TemplateBinding Foreground}" />
                        </flat:FlatButton>

                        <Image Grid.Row="0" Grid.Column="0" Margin="2,3,2,1" Source="{TemplateBinding GroupIcon}" Width="16" Height="16" HorizontalAlignment="Center" x:Name="PART_GroupImage">
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </Style>
                            </Image.Style>
                        </Image>

                        <Border Grid.Column="2" Grid.RowSpan="2" BorderBrush="{TemplateBinding GroupSeparatorBrush}" BorderThickness="1" Width="{TemplateBinding GroupSeparatorWidth}"
                                Visibility="{TemplateBinding ShowGroupSeparator, Converter={StaticResource VisConverter}}" Margin="0,3" />

                        <ributils:RibbonGroupItemsControl x:Name="PART_Ic" ItemsSource="{TemplateBinding Items}" Margin="2,3,2,1" Focusable="False" >
                            <ributils:RibbonGroupItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel IsItemsHost="True" Orientation="Vertical" />
                                </ItemsPanelTemplate>
                            </ributils:RibbonGroupItemsControl.ItemsPanel>
                            <ributils:RibbonGroupItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border>
                                        <ContentPresenter Content="{Binding .}" HorizontalAlignment="Left" Width="Auto" />
                                    </Border>
                                </DataTemplate>
                            </ributils:RibbonGroupItemsControl.ItemTemplate>
                        </ributils:RibbonGroupItemsControl>

                        <Border Grid.Row="1" >
                            <Grid x:Name="PART_Header" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{TemplateBinding Title}" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="3,0" />
                                <flat:FlatButton TransparentBack="True" Grid.Column="1" ColorScheme="{TemplateBinding ColorScheme}" MinHeight="16" Padding="1" >
                                    <flat:FlatButton.Style>
                                        <Style TargetType="{x:Type flat:FlatButton}">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=ExpandedItems.Count, RelativeSource={RelativeSource AncestorType={x:Type ribbon:RibbonGroup}}}" Value="0">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </flat:FlatButton.Style>
                                    <Path Grid.Column="1" Data="M0,0 L8,0 4,4 z" HorizontalAlignment="Left" VerticalAlignment="Center"
                                        Height="5" Width="8" Stretch="Fill" Fill="{TemplateBinding Foreground}" Stroke="{TemplateBinding Foreground}" />
                                </flat:FlatButton>
                                <flat:FlatButton TransparentBack="True" Grid.Column="2" ColorScheme="{TemplateBinding ColorScheme}" Padding="5,1" Margin="3,0,0,0" 
                                        MinHeight="16" x:Name="btn_Launcher" IsEnabled="{TemplateBinding IsLauncherEnabled}" ToolTip="{TemplateBinding LauncherTooltip}"
                                        Command="{x:Static ribbon:RibbonCommands.DialogLauncherAction}" >
                                    <flat:FlatButton.Style>
                                        <Style TargetType="{x:Type flat:FlatButton}">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </Style>
                                    </flat:FlatButton.Style>
                                    <Path Grid.Column="1" Data="M8,0 L8,8 0,8 L1,7 L7,7 L7,1 z" HorizontalAlignment="Left" VerticalAlignment="Center"
                                        Height="8" Width="8" Stretch="Fill" Fill="{TemplateBinding Foreground}" Stroke="{TemplateBinding Foreground}" />
                                </flat:FlatButton>
                            </Grid>
                        </Border>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="ShowGroupHeader" Value="True" />
                                <Condition Property="ShowLauncher" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Visibility" TargetName="btn_Launcher" Value="Visible" />
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="ShowGroupHeader" Value="False" />
                                <Condition Property="ShowLauncher" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Visibility" TargetName="btn_InlineLauncher" Value="Visible" />
                        </MultiTrigger>
                        <Trigger Property="IsCollapsed" Value="True">
                            <Setter Property="Visibility" TargetName="PART_GroupImage" Value="Visible" />
                            <Setter Property="Visibility" TargetName="PART_Ic" Value="Collapsed" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="{x:Type ributils:RibbonTwoLineText}" TargetType="{x:Type ributils:RibbonTwoLineText}">
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ributils:RibbonTwoLineText}">
                    <Grid SnapsToDevicePixels="True">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Name="PART_TextBlock1" 
                                   BaselineOffset="{TemplateBinding BaselineOffset}"
                                   LineHeight="{TemplateBinding LineHeight}"
                                   LineStackingStrategy="{TemplateBinding LineStackingStrategy}"
                                   Padding="{TemplateBinding Padding}"
                                   TextAlignment="{TemplateBinding TextAlignment}" 
                                   TextDecorations="{TemplateBinding TextDecorations}"
                                   TextEffects="{TemplateBinding TextEffects}"
                                   TextTrimming="None"
                                   TextWrapping="NoWrap"
                                   VerticalAlignment="{TemplateBinding VerticalAlignment}"
                                   Grid.Row="0" />
                        <DockPanel Grid.Row="1" 
                                       HorizontalAlignment="{TemplateBinding HorizontalAlignment}" >
                            <Grid x:Name="pathGrid"
                                      MinHeight="{TemplateBinding LineHeight}"
                                      Margin="2,0,0,0"
                                      DockPanel.Dock="Right">
                                <Path Name="PART_Path" 
                                          VerticalAlignment="Center" 
                                          Data="{TemplateBinding PathData}"
                                          Fill="{TemplateBinding PathFill}"
                                          Stroke="{TemplateBinding PathStroke}" />
                            </Grid>
                            <TextBlock Name="PART_TextBlock2" 
                                           Margin="0,0,2,0"
                                           BaselineOffset="{TemplateBinding BaselineOffset}"
                                           LineHeight="{TemplateBinding LineHeight}"
                                           LineStackingStrategy="{TemplateBinding LineStackingStrategy}"
                                           Padding="{TemplateBinding Padding}"
                                           TextAlignment="{TemplateBinding TextAlignment}" 
                                           TextDecorations="{TemplateBinding TextDecorations}"
                                           TextEffects="{TemplateBinding TextEffects}" 
                                           TextTrimming="{TemplateBinding TextTrimming}"
                                           TextWrapping="NoWrap"
                                           VerticalAlignment="{TemplateBinding VerticalAlignment}" 
                                           DockPanel.Dock="Left"/>
                        </DockPanel>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="PathData" Value="{x:Null}">
                            <Setter TargetName="pathGrid" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="ShowPath" Value="False">
                            <Setter TargetName="pathGrid" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter TargetName="PART_TextBlock2" Property="Margin" Value="0" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="pathGrid" Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type ribbon:RibbonButton}">
        <Setter Property="Focusable" Value="True" />
        <Setter Property="MinHeight" Value="24" />
        <Setter Property="Width" Value="Auto" />
        <Setter Property="TransparentBack" Value="True" />
        <Setter Property="BorderSelectionThickness" Value="1" />
        <Setter Property="Padding" Value="4,0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ribbon:RibbonButton}">
                    <Border x:Name="btn_Border" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" SnapsToDevicePixels="True" >
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{Binding Path=Background, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonButton}}}" />
                                <Setter Property="BorderBrush" Value="{Binding Path=BorderBrush, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonButton}}}" />
                                <Setter Property="BorderThickness" Value="{Binding Path=BorderThickness, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonButton}}}" />
                                <Setter Property="CornerRadius" Value="{Binding Path=CornerRadius, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonButton}}}" />
                            </Style>
                        </Border.Style>

                        <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                            <Grid x:Name="btn_Cc" Margin="{TemplateBinding Padding}" >
                                <Grid x:Name="Part_Small" Margin="2,1,4,1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="16" />
                                        <ColumnDefinition Width="2" x:Name="colPadding" />
                                        <ColumnDefinition Width="Auto" x:Name="colTitle" />
                                    </Grid.ColumnDefinitions>
                                    <Image Grid.Column="0" Source="{TemplateBinding SmallIcon}" Width="16" Height="16" VerticalAlignment="Center" />
                                    <TextBlock Grid.Column="2" Text="{TemplateBinding Title}" VerticalAlignment="Center" />
                                </Grid>
                                <Grid x:Name="Part_Large" Margin="1" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="32" />
                                        <RowDefinition Height="2" />
                                        <RowDefinition Height="34" />
                                    </Grid.RowDefinitions>

                                    <Image Grid.Row="0" Source="{TemplateBinding LargeIcon}" Width="32" Height="32" HorizontalAlignment="Center" />
                                    <ributils:RibbonTwoLineText x:Name="TwoLineText" Text="{TemplateBinding Title}" HasTwoLines="True"    
                                                  TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center"
                                                  LineHeight="14px" LineStackingStrategy="BlockLineHeight" Margin="1,1,0,0" Grid.Row="2" />
                                    <!--<TextBlock Grid.Row="2" Text="{TemplateBinding Title}" HorizontalAlignment="Center" MaxHeight="34" />-->
                                </Grid>
                            </Grid>
                            <Rectangle x:Name="brdr_Focus" Margin="1" StrokeThickness="1" Opacity="0.8" StrokeDashArray="1 3"
                                           Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonButton}}}" >
                                <Rectangle.Style>
                                    <Style TargetType="Rectangle">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </Style>
                                </Rectangle.Style>
                            </Rectangle>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- button element size states -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsCompacted" Value="False" />
                                <Condition Property="StandardSize" Value="Content" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Visibility" TargetName="Part_Small" Value="Collapsed" />
                                <Setter Property="Width" TargetName="colPadding" Value="0" />
                                <Setter Property="Width" TargetName="colTitle" Value="0" />
                                <Setter Property="Visibility" TargetName="Part_Large" Value="Visible" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsCompacted" Value="False" />
                                <Condition Property="StandardSize" Value="Large" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Visibility" TargetName="Part_Small" Value="Collapsed" />
                                <Setter Property="Width" TargetName="colPadding" Value="0" />
                                <Setter Property="Width" TargetName="colTitle" Value="0" />
                                <Setter Property="Visibility" TargetName="Part_Large" Value="Visible" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsCompacted" Value="False" />
                                <Condition Property="StandardSize" Value="Small" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Visibility" TargetName="Part_Small" Value="Visible" />
                                <Setter Property="Width" TargetName="colPadding" Value="2" />
                                <Setter Property="Width" TargetName="colTitle" Value="Auto" />
                                <Setter Property="Visibility" TargetName="Part_Large" Value="Collapsed" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsCompacted" Value="False" />
                                <Condition Property="StandardSize" Value="IconOnly" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Visibility" TargetName="Part_Small" Value="Visible" />
                                <Setter Property="Width" TargetName="colPadding" Value="0" />
                                <Setter Property="Width" TargetName="colTitle" Value="0" />
                                <Setter Property="Visibility" TargetName="Part_Large" Value="Collapsed" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
