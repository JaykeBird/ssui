                                        <MenuItem Header="Sort by Category" Command="{x:Static pl:PropertyListCommands.SortByCategory}" />
                                        <Separator />
                                        <MenuItem Header="Show Inherited" IsChecked="{TemplateBinding ShowInheritedProperties}"
