                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding StandardSize, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="Content" />
                                <Condition Binding="{Binding IsCompacted, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="False" />
                                <Condition Binding="{Binding ShowTitle, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="False" />
                                <Condition Binding="{Binding ShowIcon, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Height" TargetName="PART_MainRow" Value="0" />
                        </MultiDataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
