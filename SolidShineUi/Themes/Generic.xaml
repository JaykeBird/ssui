                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Image Grid.Row="0" Grid.ColumnSpan="2" Source="{TemplateBinding LargeIcon}" Width="32" Height="32" HorizontalAlignment="Center" />
                                    <ributils:RibbonTwoLineText x:Name="TwoLineText" Text="{TemplateBinding Title}" HasTwoLines="True"    
                                                  TextAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Center"
                                                  LineHeight="14px" LineStackingStrategy="BlockLineHeight" Margin="1,1,1,0" Grid.Row="2"
                                                  PathFill="{TemplateBinding Foreground}" PathStroke="{TemplateBinding Foreground}" PathData="M0,0 L6,0 3,3 z" />
                                    <!--<TextBlock Grid.Row="2" Text="{TemplateBinding Title}" HorizontalAlignment="Center" MaxHeight="34" />-->
                                    <Path Grid.Column="1" Grid.Row="2" Data="M0,0 L8,0 4,4 z" HorizontalAlignment="Left" VerticalAlignment="Center" x:Name="RightPath"
                                        Height="5" Width="8" Margin="5,0,3,0" Stretch="Fill" Fill="{TemplateBinding Foreground}" Stroke="{TemplateBinding Foreground}" />
                                </Grid>
                            </Grid>
                            <Rectangle x:Name="brdr_Focus" Margin="1" StrokeThickness="1" Opacity="0.8" StrokeDashArray="1 3"
                                           Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonMenuButton}}}" >
                                <Rectangle.Style>
                                    <Style TargetType="Rectangle">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </Style>
                                </Rectangle.Style>
                            </Rectangle>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- button element size states -->
                        <Trigger Property="ShowMenuArrow" Value="False">
                            <Trigger.Setters>
                                <Setter Property="ShowPath" TargetName="TwoLineText" Value="False" />
                                <Setter Property="Visibility" TargetName="RightPath" Value="Collapsed" />
                            </Trigger.Setters>
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsCompacted" Value="False" />
                                <Condition Property="StandardSize" Value="Large" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Visibility" TargetName="Part_Small" Value="Collapsed" />
                                <Setter Property="Width" TargetName="colPadding" Value="0" />
                                <Setter Property="Width" TargetName="colTitle" Value="0" />
                                <Setter Property="Visibility" TargetName="Part_Large" Value="Visible" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsCompacted" Value="False" />
                                <Condition Property="StandardSize" Value="Small" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Visibility" TargetName="Part_Small" Value="Visible" />
                                <Setter Property="Width" TargetName="colPadding" Value="2" />
                                <Setter Property="Width" TargetName="colTitle" Value="Auto" />
                                <Setter Property="Visibility" TargetName="Part_Large" Value="Collapsed" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsCompacted" Value="False" />
                                <Condition Property="StandardSize" Value="IconOnly" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Visibility" TargetName="Part_Small" Value="Visible" />
                                <Setter Property="Width" TargetName="colPadding" Value="0" />
                                <Setter Property="Width" TargetName="colTitle" Value="0" />
                                <Setter Property="Visibility" TargetName="Part_Large" Value="Collapsed" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsCompacted" Value="True" />
                                <Condition Property="CompactSize" Value="Large" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Visibility" TargetName="Part_Small" Value="Collapsed" />
                                <Setter Property="Width" TargetName="colPadding" Value="0" />
                                <Setter Property="Width" TargetName="colTitle" Value="0" />
                                <Setter Property="Visibility" TargetName="Part_Large" Value="Visible" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsCompacted" Value="True" />
                                <Condition Property="CompactSize" Value="Small" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Visibility" TargetName="Part_Small" Value="Visible" />
                                <Setter Property="Width" TargetName="colPadding" Value="2" />
                                <Setter Property="Width" TargetName="colTitle" Value="Auto" />
                                <Setter Property="Visibility" TargetName="Part_Large" Value="Collapsed" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsCompacted" Value="True" />
                                <Condition Property="CompactSize" Value="IconOnly" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Visibility" TargetName="Part_Small" Value="Visible" />
                                <Setter Property="Width" TargetName="colPadding" Value="0" />
                                <Setter Property="Width" TargetName="colTitle" Value="0" />
                                <Setter Property="Visibility" TargetName="Part_Large" Value="Collapsed" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <!-- triggers for displaying Path -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="ShowMenuArrow" Value="True" />
                                <Condition Property="KeepMenuArrowOnRight" Value="False" />
                                <Condition Property="StandardSize" Value="Large" />
                                <Condition Property="IsCompacted" Value="False" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="ShowPath" TargetName="TwoLineText" Value="True" />
                                <Setter Property="Visibility" TargetName="RightPath" Value="Collapsed" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="ShowMenuArrow" Value="True" />
                                <Condition Property="KeepMenuArrowOnRight" Value="True" />
                                <Condition Property="StandardSize" Value="Large" />
                                <Condition Property="IsCompacted" Value="False" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="ShowPath" TargetName="TwoLineText" Value="False" />
                                <Setter Property="Visibility" TargetName="RightPath" Value="Visible" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="ShowMenuArrow" Value="True" />
                                <Condition Property="KeepMenuArrowOnRight" Value="False" />
                                <Condition Property="CompactSize" Value="Large" />
                                <Condition Property="IsCompacted" Value="True" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="ShowPath" TargetName="TwoLineText" Value="True" />
                                <Setter Property="Visibility" TargetName="RightPath" Value="Collapsed" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="ShowMenuArrow" Value="True" />
                                <Condition Property="KeepMenuArrowOnRight" Value="True" />
                                <Condition Property="CompactSize" Value="Large" />
                                <Condition Property="IsCompacted" Value="True" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="ShowPath" TargetName="TwoLineText" Value="False" />
                                <Setter Property="Visibility" TargetName="RightPath" Value="Visible" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <!-- other triggers from FlatButton -->
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEnabled" Value="False" />
                                <Condition Property="TransparentBack" Value="False" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Focusable" Value="False" />
                                <Setter Property="Opacity" TargetName="btn_Cc" Value="0.6" />
                                <Setter Property="Background" TargetName="btn_Border" Value="{Binding Path=DisabledBrush, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonMenuButton}}}" />
                                <Setter Property="BorderBrush" TargetName="btn_Border" Value="{Binding Path=BorderDisabledBrush, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonMenuButton}}}" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsEnabled" Value="False" />
                                <Condition Property="TransparentBack" Value="True" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="Focusable" Value="False" />
                                <Setter Property="Opacity" TargetName="btn_Cc" Value="0.6" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="BorderThickness" TargetName="btn_Border" Value="{Binding Path=BorderSelectionThickness, 
                                RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonMenuButton}}}" />
                        </Trigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True" />
                                <Condition Property="IsMouseOver" Value="False" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Background" TargetName="btn_Border" Value="{Binding Path=SelectedBrush, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonMenuButton}}}" />
                            <Setter Property="BorderBrush" TargetName="btn_Border" Value="{Binding Path=BorderSelectedBrush, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonMenuButton}}}" />
                        </MultiTrigger>
                        <Trigger Property="IsMouseOver" Value="True" >
                            <Setter Property="Background" TargetName="btn_Border" Value="{Binding Path=HighlightBrush, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonMenuButton}}}" />
                            <Setter Property="BorderBrush" TargetName="btn_Border" Value="{Binding Path=BorderHighlightBrush, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonMenuButton}}}" />
                        </Trigger>
                        <Trigger Property="IsMouseDown" Value="True">
                            <Setter Property="Background" TargetName="btn_Border" Value="{Binding Path=ClickBrush, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonMenuButton}}}" />
                            <Setter Property="BorderBrush" TargetName="btn_Border" Value="{Binding Path=BorderHighlightBrush, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type ribbon:RibbonMenuButton}}}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="True" >
                            <Setter Property="Visibility" TargetName="brdr_Focus" Value="Visible" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

