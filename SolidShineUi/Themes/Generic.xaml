                                                                        <Condition Property="Role" Value="TopLevelHeader"/>
                                                                    </MultiTrigger.Conditions>
                                                                    <Setter TargetName="Border" Property="Background" Value="{Binding Path=ContentAreaBackground, RelativeSource={RelativeSource AncestorType={x:Type flat:TabControl}}}"/>
                                                                </MultiTrigger>
                                                                <MultiTrigger>
                                                                    <MultiTrigger.Conditions>
                                                                        <Condition Property="IsHighlighted" Value="true"/>
                                                                        <Condition Property="Role" Value="TopLevelItem"/>
                                                                    </MultiTrigger.Conditions>
                                                                    <Setter TargetName="Border" Property="Background" Value="{Binding Path=ButtonHighlightBackground, RelativeSource={RelativeSource AncestorType={x:Type flat:TabControl}}}"/>
                                                                </MultiTrigger>
                                                                <MultiTrigger>
                                                                    <MultiTrigger.Conditions>
                                                                        <Condition Property="IsHighlighted" Value="true"/>
                                                                        <Condition Property="Role" Value="SubmenuHeader"/>
                                                                    </MultiTrigger.Conditions>
                                                                    <Setter TargetName="Border" Property="Background" Value="{Binding Path=ButtonHighlightBackground, RelativeSource={RelativeSource AncestorType={x:Type flat:TabControl}}}"/>
                                                                </MultiTrigger>
                                                                <MultiTrigger>
                                                                    <MultiTrigger.Conditions>
                                                                        <Condition Property="IsHighlighted" Value="true"/>
                                                                        <Condition Property="Role" Value="SubmenuItem"/>
                                                                    </MultiTrigger.Conditions>
                                                                    <Setter TargetName="Border" Property="Background" Value="{Binding Path=ButtonHighlightBackground, RelativeSource={RelativeSource AncestorType={x:Type flat:TabControl}}}"/>
                                                                </MultiTrigger>
                                                                <MultiTrigger>
                                                                    <MultiTrigger.Conditions>
                                                                        <Condition Property="IsSubmenuOpen" Value="true"/>
                                                                        <Condition Property="Role" Value="TopLevelHeader"/>
                                                                    </MultiTrigger.Conditions>
                                                                    <Setter TargetName="Border" Property="Background" Value="{Binding Path=ContentAreaBackground, RelativeSource={RelativeSource AncestorType={x:Type flat:TabControl}}}"/>
                                                                    <Setter TargetName="Border" Property="BorderBrush" Value="{Binding Path=BorderBrush, RelativeSource={RelativeSource AncestorType={x:Type flat:TabControl}}}"/>
