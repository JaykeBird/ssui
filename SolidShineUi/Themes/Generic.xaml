                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderThickness" Value="1,0,1,1"  />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ShowTabsOnBottom, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type flat:TabControl}}}" Value="True">
                                                <Setter Property="BorderThickness" Value="1,1,1,0" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <ContentPresenter x:Name="PART_ContentHost" ContentSource="{Binding Path=SelectedTabContent, RelativeSource={RelativeSource AncestorType={x:Type flat:TabControl}}}" />
                            </Border>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type flat:SelectPanel}">
        <Setter Property="Focusable" Value="True" />
        <Setter Property="Background" Value="White" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type flat:SelectPanel}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="{TemplateBinding CornerRadius}"
                            Background="{TemplateBinding Background}" >
                        <ScrollViewer x:Name="PART_Sv" Margin="{TemplateBinding Padding}"
                                      VerticalScrollBarVisibility="{TemplateBinding VerticalScrollBarVisibility}" HorizontalScrollBarVisibility="{TemplateBinding HorizontalScrollBarVisibility}" >
                            <ItemsControl x:Name="PART_Ic" ItemsSource="{TemplateBinding ItemsSource}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical" IsItemsHost="True" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type flat:FileSelect}">
        <Setter Property="Focusable" Value="True" />
        <Setter Property="AllowDrop" Value="True" />
        <Setter Property="ContextMenu">
            <Setter.Value>
                <flat:ContextMenu>
                    <MenuItem Header="Browse..." Command="{x:Static flat:FileSelect.BrowseForFile}"
                              CommandTarget="{Binding Path=PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <Separator />
                    <MenuItem Header="Open Containing Folders" Command="{x:Static flat:FileSelect.OpenContainingFolders}"
                              CommandTarget="{Binding Path=PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <MenuItem Header="Copy Filenames" Command="{x:Static flat:FileSelect.CopyFilenames}"
                              CommandTarget="{Binding Path=PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                    <Separator />
                    <MenuItem Header="Clear All Files" Command="{x:Static flat:FileSelect.ClearSelectedFiles}"
                              CommandTarget="{Binding Path=PlacementTarget, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                </flat:ContextMenu>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type flat:FileSelect}">
                    <Border BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="{TemplateBinding CornerRadius}" >
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="{Binding Background, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                <Setter Property="BorderBrush" Value="{Binding BorderBrush, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="False">
                                        <Setter Property="Background" Value="{Binding BackgroundDisabledBrush, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                        <Setter Property="BorderBrush" Value="{Binding BorderDisabledBrush, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Grid Margin="{TemplateBinding Padding}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid x:Name="PART_ButtonHolder">
                                <Grid.Style>
                                    <Style TargetType="Grid">
                                        <Setter Property="Grid.Row" Value="1" />
                                        <Setter Property="Grid.Column" Value="2" />
                                        <Setter Property="Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ButtonPlacement, Mode=OneWay, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="Top">
                                                <Setter Property="Grid.Row" Value="0" />
                                                <Setter Property="Grid.Column" Value="1" />
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ButtonPlacement, Mode=OneWay, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="Left">
                                                <Setter Property="Grid.Row" Value="1" />
                                                <Setter Property="Grid.Column" Value="0" />
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ButtonPlacement, Mode=OneWay, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="Right">
                                                <Setter Property="Grid.Row" Value="1" />
                                                <Setter Property="Grid.Column" Value="2" />
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ButtonPlacement, Mode=OneWay, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="Bottom">
                                                <Setter Property="Grid.Row" Value="2" />
                                                <Setter Property="Grid.Column" Value="1" />
                                                <Setter Property="Visibility" Value="Visible" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ButtonPlacement, Mode=OneWay, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="Hidden">
                                                <Setter Property="Grid.Row" Value="1" />
                                                <Setter Property="Grid.Column" Value="2" />
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Grid.Style>
                                <flat:FlatButton x:Name="PART_Button" MinHeight="18" Padding="2"
                                    BorderBrush="{TemplateBinding BorderBrush}" BorderDisabledBrush="{TemplateBinding BorderDisabledBrush}"
                                    BorderHighlightBrush="{TemplateBinding BorderBrush}" BorderSelectedBrush="{TemplateBinding BorderBrush}"
                                    Background="{TemplateBinding ButtonBackground}" HighlightBrush="{TemplateBinding ButtonHighlightBrush}" 
                                    ClickBrush="{TemplateBinding ButtonClickBrush}" DisabledBrush="{TemplateBinding BackgroundDisabledBrush}"
                                    Command="{x:Static flat:FileSelect.BrowseForFile}" CornerRadius="{TemplateBinding ButtonCornerRadius}" >
                                    <TextBlock Text="{TemplateBinding BrowseButtonText}" Margin="0,2" />
                                </flat:FlatButton>
                            </Grid>
                            <Grid x:Name="PART_Content" Grid.Row="1" Grid.Column="1" Margin="{TemplateBinding FileListPadding}" >
                                <ScrollViewer
                                      VerticalScrollBarVisibility="{TemplateBinding VerticalScrollBarVisibility}" HorizontalScrollBarVisibility="{TemplateBinding HorizontalScrollBarVisibility}" >
                                    <ScrollViewer.Style>
                                        <Style TargetType="ScrollViewer">
                                            <Setter Property="Visibility" Value="Visible" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=DisplayFilenames, RelativeSource={RelativeSource AncestorType={x:Type flat:FileSelect}}}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ScrollViewer.Style>
                                    <ItemsControl x:Name="PART_Ic" ItemsSource="{TemplateBinding SelectedFiles}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical" IsItemsHost="True" />
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <ssut:ImageTextListItem Title="{Binding .,Converter={StaticResource FileNameConverter}}" Icon="{Binding ., Converter={StaticResource FileIconConverter}}" 
                                                                        CanSelect="False" Command="{x:Static flat:FileSelect.RemoveSelectedFile}" CommandParameter="{Binding .}"
                                                                        ButtonToolTip="Remove" ShowIcon="{Binding Path=ShowIcon, RelativeSource={RelativeSource AncestorType={x:Type flat:FileSelect}}}"
                                                                        HighlightBrush="#01FFFFFF"
                                                                        ClickBrush="{Binding Path=ButtonClickBrush, RelativeSource={RelativeSource AncestorType={x:Type flat:FileSelect}}}"
                                                                        ButtonBackground="{Binding Path=ButtonBackground, RelativeSource={RelativeSource AncestorType={x:Type flat:FileSelect}}}"
                                                                        ButtonHighlightBrush="{Binding Path=ButtonHighlightBrush, RelativeSource={RelativeSource AncestorType={x:Type flat:FileSelect}}}"
                                                                        ButtonClickBrush="{Binding Path=ButtonClickBrush, RelativeSource={RelativeSource AncestorType={x:Type flat:FileSelect}}}"
                                                                        ButtonBackgroundDisabledBrush="{Binding Path=BackgroundDisabledBrush, RelativeSource={RelativeSource AncestorType={x:Type flat:FileSelect}}}"
                                                                        ButtonBorderDisabledBrush="{Binding Path=BorderDisabledBrush, RelativeSource={RelativeSource AncestorType={x:Type flat:FileSelect}}}"
                                                                        BorderBrush="{Binding Path=BorderBrush, RelativeSource={RelativeSource AncestorType={x:Type flat:FileSelect}}}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                                <Grid>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <MultiDataTrigger>
                                                    <MultiDataTrigger.Conditions>
                                                        <Condition Binding="{Binding Path=DisplayFilenames, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="True" />
                                                        <Condition Binding="{Binding Path=SelectedFiles.Count, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="0" />
                                                    </MultiDataTrigger.Conditions>
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </MultiDataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <TextBlock Text="{Binding Path=NoFilesSelectedMessage, RelativeSource={RelativeSource Mode=TemplatedParent}}" 
                                               VerticalAlignment="Center" x:Name="PART_NoFiles_FileList">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Margin" Value="24,4,0,4" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=ShowIcon, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="False">
                                                        <Setter Property="Margin" Value="2,4,0,4" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Grid>
                                <Grid>
                                    <Grid.Style>
                                        <Style TargetType="Grid">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Path=DisplayFilenames, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="False">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Grid.Style>
                                    <ssut:ImageTextListItem x:Name="itleNonList" CanRemove="False" CanSelect="False"
                                                            ShowIcon="{Binding Path=ShowIcon, RelativeSource={RelativeSource Mode=TemplatedParent}}"
                                                            HighlightBrush="#01FFFFFF" ClickBrush="#01FFFFFF" >
                                        <ssut:ImageTextListItem.Style>
                                            <Style TargetType="{x:Type ssut:ImageTextListItem}">
                                                <Setter Property="Title" Value="{Binding Path=SelectedFiles.Count, RelativeSource={RelativeSource Mode=TemplatedParent}, StringFormat='\{0\} file(s) selected'}" >
                                                    <!--<Setter.Value>
                                                        <MultiBinding StringFormat="\{0\} \{1\}">
                                                            <Binding Path="SelectedFiles.Count" RelativeSource="{RelativeSource Mode=TemplatedParent}" />
                                                            <Binding Path="StackCountMessage" RelativeSource="{RelativeSource Mode=TemplatedParent}" />
                                                        </MultiBinding>
                                                    </Setter.Value>-->
                                                </Setter>
                                                <Setter Property="Icon" Value="/SolidShineUi;component/Images/StackColor.png" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=SelectedFiles.Count, RelativeSource={RelativeSource Mode=TemplatedParent}}" Value="0">
                                                        <Setter Property="Title" Value="{Binding Path=NoFilesSelectedMessage, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                                        <Setter Property="Icon" Value="{x:Null}" />
                                                    </DataTrigger>
                                                    <!--<DataTrigger Binding="{Binding Path=SelectedFiles.Count, RelativeSource={RelativeSource AncestorType={x:Type flat:FileSelect}}}" Value="1">
                                                        <Setter Property="Title" Value="{Binding Path=SelectedFiles, RelativeSource={RelativeSource AncestorType={x:Type flat:FileSelect}}, Converter={StaticResource FileSelectSstConverter}}" />
                                                        <Setter Property="Icon" Value="{Binding Path=SelectedFiles, RelativeSource={RelativeSource AncestorType={x:Type flat:FileSelect}}, Converter={StaticResource FileIconConverter}}" />
                                                    </DataTrigger>-->
                                                </Style.Triggers>
                                            </Style>
                                        </ssut:ImageTextListItem.Style>
                                    </ssut:ImageTextListItem>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
