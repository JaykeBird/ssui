<flat:FlatWindow x:Class="SolidShineUi.MultilineStringInputDialog" x:Name="window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:flat="clr-namespace:SolidShineUi"
        xmlns:pl="clr-namespace:SolidShineUi.PropertyList"
        mc:Ignorable="d" Title="Dialog" Height="200" Width="300" Loaded="FlatWindow_Loaded" SourceInitialized="window_SourceInitialized" CaptionDisplayType="Close" Topmost="True" >
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtDesc" HorizontalAlignment="Left" Margin="20,15,0,0" TextWrapping="Wrap" VerticalAlignment="Top"
                   Text="{Binding ElementName=window, Path=Description, FallbackValue='Enter a value:'}" />
        <flat:FlatButton x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Margin="125,0,0,0" Width="75" Height="24" VerticalAlignment="Center" Click="btnOK_Click" Grid.Row="2" />
        <flat:FlatButton x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="205,0,0,0" Width="75" Height="24" VerticalAlignment="Center" Click="btnCancel_Click" Grid.Row="2" />
        <flat:ClickSelectTextBox x:Name="txtValue" Margin="20,3,20,8" KeyDown="txtName_KeyDown" AcceptsReturn="True" AcceptsTab="True"
                                 SelectOnFocus="{Binding SelectTextOnFocus, ElementName=window, FallbackValue=true}" Text="{Binding Value, ElementName=window}" Grid.Row="1" />
    </Grid>
</flat:FlatWindow>
