<flat:FlatWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:flat="clr-namespace:SolidShineUi"
        x:Class="SolidShineUi.PropertyList.Dialogs.CharInputDialog" x:Name="window"
        mc:Ignorable="d"
        Title="Enter Unicode Code Point" Height="260" Width="400" Loaded="FlatWindow_Loaded" CaptionDisplayType="Close" ResizeMode="NoResize" FontSize="12" >
    <Grid x:Name="grid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" MinHeight="40"/>
            <RowDefinition Height="35" />
            <RowDefinition Height="40" />
            <RowDefinition Height="2*" MinHeight="80"/>
            <RowDefinition Height="40" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtDesc" Margin="20,20,20,0" TextWrapping="Wrap" VerticalAlignment="Top" Grid.ColumnSpan="2"
                   Text="{Binding Description, ElementName=window, FallbackValue='Enter a Unicode (UTF-32) code point:'}" />
        <flat:IntegerSpinner x:Name="txtHex" Height="24" Margin="20,5,10,0" VerticalAlignment="Top" KeyDown="txtName_KeyDown" Grid.Row="2" ValueChanged="txtHex_ValueChanged" DisplayAsHex="True" />
        <flat:IntegerSpinner x:Name="nudDec" Height="24" Margin="10,5,15,0" VerticalAlignment="Top" KeyDown="txtName_KeyDown" Grid.Row="2" ValueChanged="nudDec_ValueChanged" Grid.Column="1" />
        <flat:ClickSelectTextBox x:Name="txtPreview" Height="24" IsReadOnly="True" BorderThickness="0" Background="Transparent" Margin="20,40,10,0" VerticalAlignment="Top" SelectOnFocus="True" Grid.Row="3" />
        <TextBlock HorizontalAlignment="Left" Margin="20,15,0,0" Text="As Hexadecimal (A-F,0-9):" VerticalAlignment="Top" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,15,0,0" Text="As Decimal:" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,15,0,0" Text="Preview:" VerticalAlignment="Top" Grid.Row="3"/>
        <flat:FlatButton x:Name="btnOK" Content="OK" HorizontalAlignment="Right" Margin="0,0,100,15" Width="75" Height="24" VerticalAlignment="Bottom" Click="btnOK_Click" Grid.Row="4" Grid.Column="1" />
        <flat:FlatButton x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Margin="0,0,20,15" Width="75" Height="24" VerticalAlignment="Bottom" Click="btnCancel_Click" Grid.Row="4" Grid.Column="1" />
    </Grid>
</flat:FlatWindow>
