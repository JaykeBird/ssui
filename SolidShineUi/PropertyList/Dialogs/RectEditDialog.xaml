<flat:FlatWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:flat="clr-namespace:SolidShineUi"
        xmlns:Utils="clr-namespace:SolidShineUi.Utils"
        x:Class="SolidShineUi.PropertyList.Dialogs.RectEditDialog" x:Name="window"
        mc:Ignorable="d"
        Title="Edit Rect" Height="320" Width="350" Loaded="FlatWindow_Loaded" CaptionDisplayType="Close" ResizeMode="NoResize" FontSize="12" >
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="2*" MinHeight="80"/>
            <RowDefinition Height="40" MinHeight="34" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtDesc" HorizontalAlignment="Left" Margin="20,20,0,0" Text="Edit a rectangle:" VerticalAlignment="Top" />
        <Utils:RectEdit HorizontalAlignment="Left" Margin="20,0,0,0" Grid.Row="1" VerticalAlignment="Center" Height="180" Width="300" 
                        x:Name="edtRect" ColorScheme="{Binding ColorScheme, ElementName=window}" MeasureTypeOptionsPadding="12" />
        
        <flat:FlatButton x:Name="btnOK" Content="OK" ColorScheme="{Binding ColorScheme, ElementName=window}" HorizontalAlignment="Right" 
                         Margin="0,0,100,10" Width="75" Height="24" VerticalAlignment="Bottom" Click="btnOK_Click" Grid.Row="4" />
        <flat:FlatButton x:Name="btnCancel" Content="Cancel" ColorScheme="{Binding ColorScheme, ElementName=window}" HorizontalAlignment="Right" 
                         Margin="0,0,20,10" Width="75" Height="24" VerticalAlignment="Bottom" Click="btnCancel_Click" Grid.Row="4" />
    </Grid>
</flat:FlatWindow>
